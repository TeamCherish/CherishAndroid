<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanscjkkr_light"
        android:includeFontPadding="false"
        android:text="혼자서도 씩씩한"
        android:textSize="@dimen/text_28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_modify"
        app:srcCompat="@drawable/img_graphic" />

    <TextView
        android:id="@+id/plant_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:textSize="@dimen/text_14sp"
        android:text="한달에 한번이지만 홀씨가 있어서 어디론가 정착을
\n 감성적으로 주기와 관계를 연결짓는 문장이 필요하다?"
        app:layout_constraintEnd_toEndOf="@+id/imageView_url"
        app:layout_constraintStart_toStartOf="@+id/imageView_url"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <Button
        android:id="@+id/startbtn"
        style="@style/RoundButton.GreenMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:text="시작하기"
        app:layout_constraintEnd_toEndOf="@+id/imageView_url"
        app:layout_constraintStart_toStartOf="@+id/imageView_url"
        app:layout_constraintTop_toBottomOf="@+id/plant_explanation" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="334dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_url"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView_url"
        app:layout_constraintTop_toTopOf="@+id/imageView_url"
        app:srcCompat="@drawable/plant_tip_box" />

    <TextView
        android:id="@+id/textView1_mean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1달에 1번 물주기"
        android:textSize="13sp"
        android:textColor="#8189b3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />
</androidx.constraintlayout.widget.ConstraintLayout>