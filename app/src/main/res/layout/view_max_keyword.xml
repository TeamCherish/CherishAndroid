<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_number_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_word_count_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_max_key_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_max_keyword"
        app:layout_constraintStart_toEndOf="@id/review_number_divider"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>