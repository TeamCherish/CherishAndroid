<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/plant_detail">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.jackandphantom.circularprogressbar.CircleProgressbar
                    android:id="@+id/test"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    app:cpb_backgroundProgressColor="@color/white"
                    app:cpb_backgroundProgressWidth="20"
                    app:cpb_foregroundProgressColor="#31d693"
                    app:cpb_foregroundProgressWidth="20"
                    app:cpb_roundedCorner="true"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintEnd_toEndOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img_plant_detail" />

                <TextView
                    android:id="@+id/textView_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="남쿵둥이"
                    android:textSize="@dimen/text_20sp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <ImageView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/plantdetail_box_name"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView_nick" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cons2"
                    app:layout_constraintTop_toBottomOf="@+id/textView6">

                    <View
                        android:id="@+id/view"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="36dp"
                        android:background="#c4c4c4"
                        app:layout_constraintBottom_toBottomOf="@+id/textView19"
                        app:layout_constraintEnd_toStartOf="@+id/textView_duration"
                        app:layout_constraintTop_toTopOf="@+id/textView_duration" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="36dp"
                        android:background="#c4c4c4"
                        app:layout_constraintBottom_toBottomOf="@+id/textView19"
                        app:layout_constraintStart_toEndOf="@+id/textView_duration"
                        app:layout_constraintTop_toTopOf="@+id/textView_duration" />

                    <TextView
                        android:id="@+id/textView_Dday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        android:text="TextView"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:textColor="#00aba2"
                        app:layout_constraintEnd_toStartOf="@+id/view"
                        app:layout_constraintTop_toTopOf="@+id/textView_duration" />

                    <TextView
                        android:id="@+id/textView_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintEnd_toEndOf="@+id/cons3"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:textSize="18sp"

                        app:layout_constraintStart_toStartOf="@+id/cons3"
                        app:layout_constraintTop_toTopOf="@+id/cons3" />

                    <TextView
                        android:id="@+id/textView_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:text="TextView"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/view2"
                        app:layout_constraintTop_toTopOf="@+id/textView_duration" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="물주기"
                        android:textColor="#6b6a6a"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/text_14sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView_Dday"
                        app:layout_constraintStart_toStartOf="@+id/textView_Dday"
                        app:layout_constraintTop_toBottomOf="@+id/textView_Dday" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="지속한날"
                        android:textColor="#6b6a6a"

                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/text_14sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView_duration"
                        app:layout_constraintStart_toStartOf="@+id/textView_duration"
                        app:layout_constraintTop_toBottomOf="@+id/textView_duration" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="생일"
                        android:textColor="#6b6a6a"

                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/text_14sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView_birth"
                        app:layout_constraintStart_toStartOf="@+id/textView_birth"
                        app:layout_constraintTop_toBottomOf="@+id/textView_birth" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"

                    android:text="남궁선규"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="#1ad287"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_name"
                    app:layout_constraintEnd_toStartOf="@+id/textView_plantname"
                    app:layout_constraintStart_toEndOf="@+id/textView_name"
                    app:layout_constraintTop_toTopOf="@+id/textView_name"
                    app:layout_constraintVertical_bias="0.147" />

                <TextView
                    android:id="@+id/textView_plantname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:text="스투키"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icn_info" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/dialog_round_corner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cons0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chip" />


            <TextView
                android:id="@+id/textView1_with_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="나영"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip"
                style="@style/CustomChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_12sp"
                android:text="생각이 안나영"
                android:textColor="#454545"

                app:chipStrokeColor="@color/cherish_light_black"
                app:chipStrokeWidth="1dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/textView1_with_name"
                app:layout_constraintTop_toBottomOf="@id/textView1_with_name" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                style="@style/CustomChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_12sp"
                android:textColor="#454545"

                android:text="기억이 안나영"
                app:chipStrokeColor="@color/cherish_light_black"
                app:chipStrokeWidth="1dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/chip"
                app:layout_constraintTop_toBottomOf="@id/textView1_with_name" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                style="@style/CustomChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_12sp"
                android:textColor="#454545"
                android:text="안구라"
                app:chipStrokeColor="@color/cherish_light_black"
                app:chipStrokeWidth="1dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/chip2"
                app:layout_constraintTop_toBottomOf="@id/textView1_with_name" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과 함께했던 이야기"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView1_with_name"
                app:layout_constraintStart_toEndOf="@+id/textView1_with_name"
                app:layout_constraintTop_toTopOf="@+id/textView1_with_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            style="@style/RoundButton.GreenMain"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:text="물주기"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>