<resources>
    <!-- Base application theme. -->
    <style name="Theme.Cherish" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <!-- 버튼 text 대문자 or 소문자 -->
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.GreenMain">
        <item name="android:backgroundTint">@color/cherish_green_main</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Purple">
        <item name="android:backgroundTint">@color/cherish_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>