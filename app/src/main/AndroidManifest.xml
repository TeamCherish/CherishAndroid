<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sopt.cherish">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />


    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cherish"
        android:usesCleartextTraffic="true"
    >

        <service
            android:name=".ui.notification.FirebaseNotificationService"
            android:exported="true"
            android:enabled="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>


        <activity android:name=".ui.datail.DetailUserInputActivity" />
        <activity android:name=".ui.enrollment.EnrollmentUserActivity" />
        <activity android:name=".ui.enrollment.EnrollmentPhoneActivity" />
        <activity android:name=".ui.tutorial.TutorialActivity" />
        <activity android:name=".ui.datail.DetailPlantActivity" />
        <activity android:name=".ui.signup.SignUpActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.splash.SplashActivity" />
        <activity android:name=".ui.enrollment.PhoneBookActivity" />
        <activity android:name=".ui.enrollment.EnrollPlantActicity" />
        <activity android:name=".ui.enrollment.ResultPlantActivity" />
        <activity android:name=".ui.review.ReviewActivity" />
        <activity android:name=".ui.signin.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>