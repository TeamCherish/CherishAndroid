<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sopt.cherish">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" android:protectionLevel="signature"/>


    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cherish_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cherish_app_logo_round"
        android:supportsRtl="true"

        android:enabled="true"
        android:theme="@style/Theme.Cherish"
        android:usesCleartextTraffic="true">

        <service
            android:name=".ui.notification.FirebaseNotificationService"
            android:exported="true"
            android:enabled="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.detail.DetailUserInputActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.enrollment.EnrollmentUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.enrollment.EnrollmentPhoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tutorial.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.detail.DetailPlantActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.home.HomeBlankActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signin.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.enrollment.PhoneBookActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.enrollment.EnrollPlantActicity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.enrollment.ResultPlantActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.review.ReviewActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".ui.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>